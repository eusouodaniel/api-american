{% extends "::base.html.twig" %}

{% block body -%}
<section class="form-box1 login-user vertical-center">
    <div class="container">
        <div class="row">

        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Editar Informações</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">

                    <form class="" action="{{ path('client_edit',{'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>

                        {{ form_widget(form._token) }}

                        {% block messages %}
                            {{ parent() }}
                            {{ form_errors(form) }}
                        {% endblock %}

                        {% include 'AppBundle:Client:form.html.twig' with {'form': form} %}

                        <div class="box-footer col-md-6 col-sm-6 col-xs-12 text-left nopadding-p">
                            <button type="submit" class="btn btn-success">Editar</button>
                        </div>


                </form>
                <div class="box-footer col-md-6 col-sm-6 col-xs-12 text-right nopadding-p">
                    <a class="page-scroll" href="{{ path('dashboard_index') }}">
                        <i class="btn btn-success">Voltar</i>
                    </a>
                </div>

            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
</section><!-- /.content -->
</aside><!-- /.right-side -->
{% endblock %}
