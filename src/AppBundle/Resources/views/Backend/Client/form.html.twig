<div class="box-body">
    <div class="form-group">
        {{ form_errors(form.first_name) }}
        <label for="client_first_name">Nome</label>
        {{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.last_name) }}
        <label for="client_last_name">Sobrenome</label>
        {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
    </div>
    {# <div class="form-group">
        {{ form_errors(form.photoTemp) }}
        <label for="client_photoTemp">Imagem de perfil</label>
        {{ form_widget(form.photoTemp, {'attr': {'class': 'form-control'}}) }}
    </div> #}
    <div class="form-group">
        {{ form_errors(form.email) }}
        <label for="client_email">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>

    {% if not entity.id  %}
        <div class="form-group">
            <label for="client_name">Senha</label>
            <input type="password" id="client_plainpassword" name="client_custom[plainPassword]" maxlength="255" class="form-control" required="required" autocomplete="off">
        </div>
    {% else %}
        <div class="form-group">
            <label for="client_name">Senha</label>
            <input type="password" id="client_plainpassword" name="client_custom[plainPassword]" maxlength="255" class="form-control" autocomplete="off">
        </div>
    {% endif %}

    <div class="form-group">
        {{ form_errors(form.celphone) }}
        <label for="client_celphone">Celular</label>
        {{ form_widget(form.celphone, {'attr': {'class': 'form-control telefone'}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.phone) }}
        <label for="client_phone">Telefone</label>
        {{ form_widget(form.phone, {'attr': {'class': 'form-control telefone'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.cpf) }}
        <label for="client_email">CPF</label>
        {{ form_widget(form.cpf, {'attr': {'class': 'form-control'}}) }}
    </div>
</div><!-- /.box-body -->
