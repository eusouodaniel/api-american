{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Cadastrar</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Novo v√≠deo</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding col-md-12">

                        <form class="" action="{{ path('backend_video_new') }}" method="post" {{ form_enctype(form) }}>

                            {{ form_widget(form._token) }}

                            {% block messages %}
                                {{ parent() }}
                                {{ form_errors(form) }}
                            {% endblock %}

                            {% include 'AppBundle:Backend/Videos:form.html.twig' with {'form': form} %}

                            <div class="box-footer col-md-12 col-sm-12 col-xs-12 mg-t20 pull-right">
                                <button type="submit" class="btn btn-success" id="btnSalvar" disabled="true">Salvar</button>
                                <a href="{{ path('backend_videos') }}" class="btn btn-default">Voltar</a>
                            </div>

                        </form>

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?uglifyjs2'
        '@AppBundle/Resources/public/js/custom/Videos/index.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
