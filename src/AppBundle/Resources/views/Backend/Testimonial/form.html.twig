{{ form_row(form.image) }}

<div class="box-body">
    <div class="form-group">
        {{ form_errors(form.name) }}
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.description) }}
        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.active) }}
        <label for="testimonial_active">
            {{ form_widget(form.active, {'attr': {'class': 'form-control'}}) }}
            Ativo
        </label>
    </div>
    <div class="form-group">
        {{ form_errors(form.imageTemp) }}
        {{ form_row(form.imageTemp, {'attr': {'class': 'form-control'}}) }}
        {% if entity.image != null %}
            <a href="{{ asset('uploads/testimonial/' ~ entity.image) }}">{{ entity.image }}</a>
        {% endif %}
    </div>
</div><!-- /.box-body -->
