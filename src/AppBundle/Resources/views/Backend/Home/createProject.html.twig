{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Criar Projeto</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Novo Projeto</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">

                        <form class="" action="{{ path('backend_create_project') }}" method="post" {{ form_enctype(form) }} id="formProject">

                            {{ form_widget(form._token) }}

                            {% block messages %}
                                {{ parent() }}
                                {{ form_errors(form) }}
                            {% endblock %}

                            <div class="box-body col-md-12 col-sm-12 col-xs-12">
                              <div class="form-group">
                                  {{ form_errors(form.token) }}
                                  <label for="createproject_token">Token</label>
                                  {{ form_widget(form.token, {'attr': {'class': 'form-control'}}) }}
                              </div>
                              <div class="form-group">
                                  {{ form_errors(form.name) }}
                                  <label for="createproject_name">Nome</label>
                                  {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                              </div>
                              <div class="form-group">
                                  {{ form_errors(form.description) }}
                                  <label for="createproject_description">Descrição</label>
                                  {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                              </div>
                            </div>

                            <div class="box-footer col-md-12 col-sm-12 col-xs-12 mg-t20">
                                <button type="submit" class="btn btn-success">Salvar</button>
                            </div>

                        </form>

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->

{% endblock %}
