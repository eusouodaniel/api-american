<div class="box-body col-md-12 col-sm-12 col-xs-12">
    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
        {{ form_errors(form.name) }}
        <label for="course_name">Nome</label>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
        {{ form_errors(form.description) }}
        <label for="course_description">Descrição</label>
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-md-6 col-sm-6 col-xs-12 form-group">
        {{ form_errors(form.price) }}
        <label for="course_price">Preço</label>
        {{ form_widget(form.price, {'attr': {'class': 'form-control money'}}) }}
    </div>
</div>