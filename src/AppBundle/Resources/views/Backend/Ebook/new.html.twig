{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Cadastrar</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Cadastrar E-books</h3>
                </div><!-- /.box-header -->
                <section class="content-header">
                    <ol class="breadcrumb">
                        <li><a href="{{ path('backend_ebook') }}"><i class="fa fa-dashboard"></i>E-books</a></li>
                        <li class="active">Cadastrar</li>
                    </ol>
                </section>
                <div class="box-body table-responsive no-padding">

                        <form class="" action="{{ path('backend_ebook_create') }}" method="post" {{ form_enctype(form) }} id="formebook">

                            {{ form_widget(form._token) }}

                            {% block messages %}
                                {{ parent() }}
                                {{ form_errors(form) }}
                            {% endblock %}

                            {% include 'AppBundle:Backend/Ebook:form.html.twig' with {'form': form} %}

                            <div class="box-footer">
                                <button type="submit" class="btn btn-success">Salvar</button>
                                <a href="{{ path('backend_ebook') }}" class="btn btn-default">Voltar</a>
                            </div>

                        </form>

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->

{% endblock %}
