{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>E-book</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row ">
            <div class="col-xs-12 bs-50">
                <a href="{{ path('backend_ebook_new') }}" class="btn btn-success">Novo</a>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Listagem de E-books</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Descrição</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.name }}</td>
                                    <td>
                                        <a href="{{ path('backend_ebook_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                        <a href="{{ path('backend_ebook_inscriptions', { 'id': entity.id }) }}" class="btn btn-info">Compras</a>
                                        <a href="{{ path('backend_ebook_financial', { 'id': entity.id }) }}" class="btn btn-default">Recebimentos</a>
                                        <a href="javascript:void(0);" data-url="{{ path('backend_ebook_delete', { 'id': entity.id }) }}" class="btn btn-danger delete_item">Excluir</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->
{% endblock %}
