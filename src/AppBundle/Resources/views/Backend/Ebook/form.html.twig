{{ form_row(form.capa) }}
{{ form_row(form.ebook) }}

<div class="box-body">
    <div class="form-group">
        {{ form_errors(form.name) }}
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.description) }}
        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.price) }}
        {{ form_row(form.price, {'attr': {'class': 'form-control money'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.capaTemp) }}
        {{ form_row(form.capaTemp, {'attr': {'class': 'form-control'}}) }}
        {% if entity.capa != null %}
            <a href="{{ asset('uploads/ebook/capa/' ~ entity.capa) }}">{{ entity.capa }}</a>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_errors(form.ebookTemp) }}
        {{ form_row(form.ebookTemp, {'attr': {'class': 'form-control'}}) }}
        {% if entity.ebook != null %}
            <a href="{{ asset('uploads/ebook/ebook/' ~ entity.ebook) }}">{{ entity.ebook }}</a>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_errors(form.course) }}
        {{ form_row(form.course, {'attr': {'class': 'form-control'}}) }}
    </div>
</div><!-- /.box-body -->
