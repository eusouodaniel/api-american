{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Personalize seu site</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Definição do template</h3>
                    </div><!-- /.box-header -->

                    <div class="box-body table-responsive no-padding">

                        <div class="row">
                           <div class="col-md-12"> 
                                <span class="info-feature">Personalize o seu site de acordo com a identidade visual do seu projeto. Configure sua logo, cores e outros detalhes.</span>
                           </div>
                        </div>

                        <form class="mg-top-10" action="{{ path('backend_config_update',{'id': entity.id}) }}" method="post" {{ form_enctype(edit_form) }} id="formbanner">

                            <input type="hidden" name="_method" value="POST" />
                            {{ form_widget(edit_form._token) }}

                            {% block messages %}
                                {{ parent() }}
                                {{ form_errors(edit_form) }}
                            {% endblock %}

                            {% include 'AppBundle:Backend/ParametersConfiguration:form.html.twig' with {'form': edit_form} %}

                            <div class="box-footer">
                                <button type="submit" class="btn btn-success">Salvar</button>
                            </div>

                        </form>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->
{% endblock %}
