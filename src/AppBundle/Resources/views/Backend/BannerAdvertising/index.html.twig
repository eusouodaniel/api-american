{% extends '::Backend/base.html.twig' %}

{% block body -%}
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Banners de publicidade</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row ">
            <div class="col-xs-12 bs-50">
                <a href="{{ path('backend_banneradvertising_new') }}" class="btn btn-success">Cadastrar novo banner</a>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Listagem de Banners de Publicidade</h3>
                    </div><!-- /.box-header -->

                    <div class="row">
                       <div class="col-md-12">
                            <span class="info-feature">Cadastre novos banners de publicidade.</span>
                       </div>
                    </div>

                    <div class="box-body table-responsive no-padding mg-top-20">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Ativo</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.title }}</td>
                                    <td>{% if entity.active %} <i class="fa fa-check" aria-hidden="true"></i>{% else %}<i class="fa fa-times" aria-hidden="true"></i>{% endif %}</td>
                                    <td>
                                        <a href="{{ path('backend_banneradvertising_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                        <a href="javascript:void(0);" data-url="{{ path('backend_banneradvertising_delete', { 'id': entity.id }) }}" class="btn btn-danger delete_item">Excluir</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</aside><!-- /.right-side -->
{% endblock %}
