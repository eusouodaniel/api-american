<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-3 col-xs-12 text-left">
                <h1 class="title-footer">{{getParameterValue('footerTitle')}}</h1>
                <hr class="hr-footer">
                <p class="description-footer mg-t15">{{getParameterValue('footerBio')}}</p>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12 text-left">
                <h1 class="title-footer">Mapa do Site</h1>
                <hr class="hr-footer">
                <ul class="map">
                    <div class="col-md-6 col-sm-6 col-xs-12 nopadding-l">
                        <li><a href="{{path("homepage")}}#page-top">Home</a></li>
                        <li><a href="{{path("about_us")}}">Quem Somos</a></li>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 nopadding-l">
                        <li><a href="{{path("course_list")}}">Cursos</a></li>
                        <li><a href="{{path("home_contact")}}">Contato</a></li>
                    </div>
                </ul>
                <!-- list of pages-->
            </div>
            <!--/.map-->
            <div class="col-md-4 col-sm-4 col-xs-12 text-left">
                <h1 class="title-footer">Contatos</h1>
                <hr class="hr-footer">
                <p class="description-footer mg-t15">{{getParameterValue('footerAddress')}}</p>
                <p class="mg-b30 mg-t20"><a href="#"><i class="fa fa-envelope"></i>{{getParameterValue('footerEmail')}}</a></p>
                {% set footerPhone1 = getParameterValue('footerPhone1') %}
                {% if footerPhone1 != null %}
                  <p><a href="#"><i class="fa fa-phone"></i>{{footerPhone1}}</a></p>
                {% endif %}
                {% set footerPhone2 = getParameterValue('footerPhone2') %}
                {% if footerPhone2 != null %}
                  <p><a href="#"><i class="fa fa-phone"></i>{{footerPhone2}}</a></p>
                {% endif %}
            </div>
            <!--/.contact-->
        </div>
        <!--/. row-->
    </div>
    <!--/.container -->
</footer>
