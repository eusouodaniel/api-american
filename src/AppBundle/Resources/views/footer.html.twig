<div class="col-md-12 col-sm-12 col-xs-12 copyright">
    <div class="container">
        <div class="row">

            <div class="col-md-8 col-sm-8 col-xs-12">
                <ul class="cards text-left">
                    <li><img src="{{asset('bundles/app/img/frontend/payment.png')}}" class="img-responsive"></li>
                </ul>
                <!--/. list of cards-->
            </div>
            <!--/. cards-->
            <div class="col-md-4 col-sm-4 col-xs-12">
                <ul class="social text-right">
                    {% set footerInstagram = getParameterValue('footerInstagram') %}
                    {% set footerTwitter = getParameterValue('footerTwitter') %}
                    {% set footerFacebook = getParameterValue('footerFacebook') %}
                    {% if footerInstagram != null %}
                      <li>
                          <a href="{{footerInstagram}}">
                              <span class="fa-stack fa-lg hvr-pop">
                                  <i class="fa fa-circle fa-stack-2x"></i>
                                  <i class="fa fa-instagram fa-stack-1x fa-inverse"></i>
                              </span>
                          </a>
                      </li>
                      <!--/.instagram-->
                    {% endif %}
                    {% if footerTwitter != null %}
                      <li>
                          <a href="{{footerTwitter}}">
                              <span class="fa-stack fa-lg hvr-pop">
                                  <i class="fa fa-circle fa-stack-2x"></i>
                                  <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                              </span>
                          </a>
                      </li>
                      <!--/.twitter-->
                    {% endif %}
                    {% if footerFacebook != null %}
                      <li>
                          <a href="{{footerFacebook}}">
                              <span class="fa-stack fa-lg hvr-pop">
                                  <i class="fa fa-circle fa-stack-2x"></i>
                                  <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                              </span>
                          </a>
                      </li>
                      <!--/.facebook-->
                    {% endif %}
                </ul>
                <!--/.social-->
            </div>
            <!--/.social icons-->
        </div>
        <!--/. row-->
    </div>
    <!--/. container-->
</div>
<!--/. copyright-->



