{% extends '::Backend/base.html.twig' %}

{% block body -%}
<main class="main-content p-5" role="main">
        <div class="row">
            <div class="col-md-12">
                <h1>Cadastro</h1>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form"  action="{{ path('backend_user_create') }}" method="post" {{ form_enctype(form) }}>
                                    {{ form_widget(form._token) }}

                                    {% block messages %}
                                        {{ parent() }}
                                        {{ form_errors(form) }}
                                    {% endblock %}

                                    {% include 'UserBundle:User:form.html.twig' with {'form': form} %}
                                    <div class="form-group">
                                        <div class="col-md-8 col-md-offset-4">
                                            <button type="submit" class="btn btn-secondary waves-effect waves-light">
                                                Cadastrar
                                            </button>
                                            <a class="btn btn-light waves-effect waves-light" href="{{ path('backend_user') }}">
                                                Cancelar
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='?uglifyjs2'
        '@AppBundle/Resources/public/js/app/ajaxlocation.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}